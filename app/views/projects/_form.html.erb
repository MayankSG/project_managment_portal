<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger"><%= msg %></p>
  <% end %>
<% end %>

<%= form_for(project) do |f| %>
  <div class="form-group">
    <label>Project title:</label><br>
    <%= f.text_field :title, placeholder:"Enter title", class:"form-control" %><br>
  </div>

  <div class="form-group">
    <label>Project description</label><br>
    <%= f.text_area :description, placeholder:"Enter description", class:"form-control" %><br>
  </div>

  <div class="form-group">
    <label>Assign Users</label><br>
    <%= f.select :user_ids, User.all.collect { |u| [u.email, u.id] }, {}, multiple: true, class:'form-select'  %><br>
  </div>

  <div class="form-group">
    <label>Status</label><br>
    <%= f.select :status, Project.statuses.keys, {}, class:'form-select'%><br>
  </div>

  <%= f.submit 'Submit', class:'btn btn-dark' %>
<% end %>
